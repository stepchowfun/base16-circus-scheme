<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Circus">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Circus scheme by Stephan Boyer (https://github.com/stepchowfun) and Esther Wang (https://github.com/ewang12)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#a7a7a7" background="#191919"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#303030"/>
  <style name="CurrentLine" background="#5f5a60"/>
  <style name="LineNumber" foreground="#5f5a60"/>
  <style name="CurrentLineNumber" foreground="#505050" bold="true"/>
  <style name="SearchResult" background="#202020"/>
  <style name="Parentheses" background="#303030" />
  <style name="ParenthesesMismatch" background="#b888e2" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#ffffff" background="#5f5a60"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#5f5a60"/>
  <style name="Occurrences.Rename" background="#505050"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#4bb1a7"/>

  <!-- language primitives -->
  <style name="Number" foreground="#4bb1a7"/>
  <style name="String" foreground="#84b97c"/>
  <style name="Keyword" foreground="#b888e2"/>
  <style name="Operator" foreground="#a7a7a7"/>
  <style name="Preprocessor" foreground="#639ee4"/>
  <style name="Label" foreground="#dc657d"/>

  <!-- types, classes -->
  <style name="Type" foreground="#c3ba63"/>
  <style name="PrimitiveType" foreground="#b888e2"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#639ee4"/>
  <style name="VirtualMethod" foreground="#639ee4" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#808080"/>
  <style name="Local" foreground="#a7a7a7"/>
  <style name="Global" foreground="#a7a7a7"/>
  <style name="Static" foreground="#a7a7a7"/>
  <style name="JsScopeVar" foreground="#a7a7a7" italic="true"/>
  <style name="JsImportVar" foreground="#a7a7a7" italic="true"/>
  <style name="JsGlobalVar" foreground="#a7a7a7" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#303030"/>

  <!-- comments -->
  <style name="Comment" foreground="#5f5a60"/>
  <style name="DisabledCode" foreground="#5f5a60"/>
  <style name="Doxygen.Comment" foreground="#5f5a60"/>
  <style name="Doxygen.Tag" foreground="#5f5a60"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b888e2"/>
  <style name="Binding" foreground="#dc657d"/>
  <style name="QmlExternalId" foreground="#639ee4" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#639ee4" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b888e2"/>
  <style name="DiffLocation" foreground="#639ee4"/>
  <style name="AddedLine" foreground="#84b97c"/>
  <style name="RemovedLine" foreground="#c3ba63"/>
  <style name="LogChangeLine" foreground="#dc657d"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b888e2"/>
  <style name="DiffContextLine" foreground="#639ee4"/>
  <style name="DiffSourceLine" foreground="#84b97c"/>
  <style name="DiffSourceChar" foreground="#c3ba63" background="#202020"/>
  <style name="DiffDestLine" foreground="#84b97c"/>
  <style name="DiffDestChar" foreground="#c3ba63" background="#202020"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#dc657d" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#dc657d" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#c3ba63" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#c3ba63" underlineStyle="DotLine"/>
</style-scheme>
